<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:fontFamily="@font/comic_sans"
        android:lineSpacingExtra="8sp"
        android:text="Which Website would you like to view?"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Define dimension resources for margins and sizes -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="60dp"
        android:background="@color/black"
        android:fontFamily="@font/comic_sans"
        android:text="2000's Website Starter Kit"
        android:textAlignment="center"
        android:textColor="#F8F2F2"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_DA"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="14dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_firefox"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/deviantart" />

    <ImageButton
        android:id="@+id/imageButton_firefox"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="14dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_livejournal"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/firefox" />

    <ImageButton
        android:id="@+id/imageButton_limewire"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginStart="33dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="14dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_DA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/limewire" />

    <ImageButton
        android:id="@+id/imageButton_livejournal"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="33dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/livejournal_round" />

</androidx.constraintlayout.widget.ConstraintLayout>
